<li {{ attributes }} >
  <a href="{{ link['url'] }}" {{ link['attributes'] }}>
    {% if  item_config['xicon'] %}
      <i class="{{ item_config['xicon'] }}"></i>
    {% endif %}
    {{ link['title']|t }}
    {% if link['description'] %}
      <span class="description">
        {{ link['description']|raw }}
      </span>
    {% endif %}
    {% if item_config['caption'] %}
      <span class="mega-caption"> {{ item_config['caption']|t }}</span>
    {% endif %}
  </a>
  {{ submenu }}
</li>
